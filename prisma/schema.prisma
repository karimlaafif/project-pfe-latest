generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  loans            Loan[]
  sessions         Session[]
  accounts         Account[]
  loanApplications LoanApplication[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Loan {
  id                  String   @id @default(cuid())
  userId              String
  
  // Applicant Info
  applicantName       String
  applicantEmail      String
  age                 Int
  income              Float
  education           Education
  employmentType      EmploymentType
  maritalStatus       MaritalStatus
  monthsEmployed      Int
  
  // Loan Details
  loanAmount          Float
  loanTerm            Int
  interestRate        Float
  loanPurpose         LoanPurpose
  
  // Risk Factors
  creditScore         Int
  dtiRatio            Float
  numCreditLines      Int
  hasMortgage         Boolean
  hasDependents       Boolean
  hasCoSigner         Boolean
  
  // ML Predictions
  riskScore           Float?
  affordabilityIndex  Float?
  fraudProbability    Float?
  defaultProbability  Float?
  decision            Decision?
  confidence          Float?
  
  status              LoanStatus @default(PENDING)
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LoanApplication {
  id                String   @id @default(cuid())
  userId            String
  amount            Float
  purpose           String
  term              Int
  income            Float
  employmentStatus  String
  creditScore       Int?
  status            String
  riskScore         Float?
  affordabilityIndex Float?
  fraudScore        Float?
  decision          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  token     String   @id @default(cuid())
  email     String
  expires   DateTime
  createdAt DateTime @default(now())
}

model VerificationToken {
  token      String   @id @default(cuid())
  identifier String
  expires    DateTime
  createdAt  DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Education {
  HIGH_SCHOOL
  BACHELOR
  MASTER
  PHD
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  SELF_EMPLOYED
  UNEMPLOYED
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
}

enum LoanPurpose {
  DEBT_CONSOLIDATION
  HOME_IMPROVEMENT
  BUSINESS
  AUTO
  EDUCATION
  OTHER
}

enum Decision {
  APPROVE
  REVIEW
  REJECT
}

enum LoanStatus {
  PENDING
  APPROVED
  REJECTED
  UNDER_REVIEW
}

// ========================================
// GRC (Governance, Risk & Compliance) Models
// ========================================

model Policy {
  id          String       @id @default(cuid())
  name        String
  version     String
  status      PolicyStatus
  category    String
  content     String       @db.Text
  owner       String
  lastReview  DateTime
  nextReview  DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  audits      AuditLog[]
}

model Risk {
  id            String       @id @default(cuid())
  riskId        String       @unique
  category      RiskCategory
  description   String
  likelihood    RiskLevel
  impact        RiskLevel
  riskLevel     RiskLevel
  mitigation    String       @db.Text
  owner         String
  status        RiskStatus
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model ComplianceFramework {
  id           String            @id @default(cuid())
  name         String
  status       ComplianceStatus
  completion   Int
  lastAudit    DateTime
  nextAudit    DateTime
  findings     Int
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String
  entity      String
  entityId    String
  changes     Json?
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime @default(now())
  
  policyId    String?
  policy      Policy?  @relation(fields: [policyId], references: [id])
}

enum PolicyStatus {
  DRAFT
  ACTIVE
  UNDER_REVIEW
  ARCHIVED
}

enum RiskCategory {
  MODEL_RISK
  COMPLIANCE_RISK
  FRAUD_RISK
  OPERATIONAL_RISK
  BIAS_RISK
  CYBERSECURITY_RISK
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum RiskStatus {
  IDENTIFIED
  MONITORING
  MITIGATED
  ACCEPTED
  TRANSFERRED
}

enum ComplianceStatus {
  COMPLIANT
  IN_PROGRESS
  NON_COMPLIANT
  PENDING_AUDIT
}
